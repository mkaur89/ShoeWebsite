@model IEnumerable<SampleMVCSite.Models.Order>

@{
    ViewBag.Title = "Orders List";
}

<h2>Orders List</h2>

<p>
    @Html.ActionLink("Create New", "CreateOrder")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerId)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditOrder", new { id=item.OrderId }) |
            @Html.ActionLink("Details", "DetailsOrder", new { id=item.OrderId }) |
            @Html.ActionLink("Delete", "DeleteOrder", new { id=item.OrderId })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Back to Admin", "Index", null, new { @class = "btn btn-lg btn-success" })

