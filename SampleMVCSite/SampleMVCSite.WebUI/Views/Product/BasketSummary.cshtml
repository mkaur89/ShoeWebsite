@model IEnumerable<SampleMVCSite.Models.BasketItem>

@{
    ViewBag.Title = "BasketSummary";
}

<h2>BasketSummary</h2>

<p>
   @Html.ActionLink("Add more products", "ProductsList")
</p>
<table class="table">
    <tr>
				<th>
					Image
				</th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasketId)
        </th>
				<th>
					@Html.DisplayNameFor(model => model.Product.Price)
				</th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
				<td width="40%">
					<img style="width:15%" height="15.5%" src="/Pictures/@item.Product.ImageUrl" alt="@item.Product.Description" />
				</td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BasketId)
        </td>
				<td>
					@Html.DisplayFor(modelItem => item.Product.Price)
				</td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBasketItem", new { id=item.BasketItemId }) |
				<!--	@Html.ActionLink("Details", "DetailsBasket", new { id = item.BasketItemId }, "Product")|-->
            @Html.ActionLink("Delete", "DeleteFromBasket", new { id = item.BasketItemId })
        </td>
    </tr>
}
</table>
<h3 style="display:inline;padding-right:24em">Total Number of Items Ordered: </h3>
<span>@ViewBag.TotalQuantity</span>
<br />
<h3 style="display:inline;padding-right:32em">Total Price: </h3>
<span>@ViewBag.TotalPrice</span>

